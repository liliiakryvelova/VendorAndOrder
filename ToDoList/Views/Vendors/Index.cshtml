<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendors Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ToDoList.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No Vendors have been added yet!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a>
      - <span>@vendor.Description</span></h3>
    }

    <a href="/vendors/new">Add a new <em>Vendor</em>.</a>

    <p><a href='/'><em>Back home</em></a></p>
  </body>
</html>