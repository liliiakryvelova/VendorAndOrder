<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Organizer</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ToDoList.Models;

    <h3>Here are all the recordss for this Artist:</h3>

    <ol>
    @foreach (var record in @Model["records"])
    {
      <li><a href='/records/@Model["artist"].Id/records/@record.Id'>@record.Artist</a></li>
    }
    </ol>

    <p><a href='/artists/@Model["artist"].Id/artists/new'>Add a new item</a></p>
    <p><a href='/artists'>Return to category list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>